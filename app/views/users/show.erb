<h2><%=@user.username%>'s Tweets!</h2>
<%@user.tweets.each do |tweet|%>
<ul><%=tweet.content%><br>
  <form action="/tweets/<%= tweet.id %>/edit" method="get">
  		<input type="submit" value="Edit Tweet" />
  	</form>
<form action="/tweets/<%= tweet.id %>/delete" method="post">
		<input id="hidden" type="hidden" name="_method" value="delete"/>
		<input type="submit" value="Delete Tweet" />
    <%end%></ul>
    
<br>
<br>
<br>
<form action="/tweets" method="get">
		<input type="submit" value="All Tweets" />
	</form>
